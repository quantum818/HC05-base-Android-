<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Debug_Activity">

    <Button
            android:text="清空"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/empty"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="287dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="396dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" android:layout_marginEnd="287dp"
            android:layout_marginRight="287dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/getinfo"
            android:layout_width="339dp"
            android:layout_height="221dp"
            android:minLines="5"
            android:gravity="top"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="145dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="365dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/sendinfo"
            android:hint="在这里输入发送内容"
            android:layout_width="337dp"
            android:layout_height="218dp"
            android:minLines="5"
            android:gravity="top"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="41dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="472dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="发射！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/send"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="287dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="396dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="163dp" android:layout_marginStart="163dp" android:layout_marginEnd="160dp"
            android:layout_marginRight="160dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Switch
            android:text="HEX"
            android:textColor="#BABABA"
            android:textSize="25dp"
            android:layout_width="99dp"
            android:layout_height="34dp" android:id="@+id/hex"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="268dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="429dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="258dp" android:layout_marginStart="258dp" android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>